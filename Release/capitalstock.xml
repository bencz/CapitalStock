<?xml version="1.0" encoding="ISO-8859-1" ?>
<messages xmlns:if="Wt.WTemplate.conditions">

  <message id="cs-footer">
    <hr />
    <h5>Developed by Alexandre Savelli Bencz - 2016</h5>
  </message>
  
  <message id="cs-login-form">  
    <h3>Login</h3>
    <hr />
    <div class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-sm-3" for="${id:username}">
          Please enter your user name:
        </label>
        <div class="col-sm-2">${username}</div>      
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="${id:password}">
          Please enter your password:
        </label>
        <div class="col-sm-2">${password}</div>      
      </div>
      <div class="form-group">
        ${login-error}
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          ${button}
        </div>
      </div>
    </div> 
  </message>
  
  <message id="cs-register-form">  
    <h3>Registration</h3>
    <hr />
    <div class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:user-name}">
          Type an user name:
        </label>
        <div class="col-sm-5">
          ${user-name}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:password}">
          Type your password:
        </label>
        <div class="col-sm-5">
          ${password}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:password-retype}">
          Retype your password:
        </label>
        <div class="col-sm-5">
          ${password-retype}
        </div>
      </div>
    
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:first-name}">
          First name:
        </label>
        <div class="col-sm-5">
          ${first-name}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:last-name}">
          Last name:
        </label>
        <div class="col-sm-5">
          ${last-name}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:age}">
          Your age:
        </label>
        <div class="col-sm-5">
          ${age}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:email}">
          Your email:
        </label>
        <div class="col-sm-5">
          ${email}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:country}">
          Which country do you live:
        </label>
        <div class="col-sm-5">
          ${country}
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="${id:city}">
          Which city do you live:
        </label>
        <div class="col-sm-5">
          ${city}
        </div>
      </div>       
      
      <div class="form-group">
        ${registration-error}
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          ${button}
        </div>
      </div>
    </div>
  </message>
  
  <message id="cs-home-form"> 
    <h3>Quote Stocks</h3>
    <hr />
    ${table}
  </message>
  
</messages>
